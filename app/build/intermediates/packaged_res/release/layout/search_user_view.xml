<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edit_text_rectangle"
    android:backgroundTint="@color/primary_color"

    android:padding="10dp"
    android:layout_margin="5dp"
    >

  <ImageView
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/person_24"

      android:layout_marginEnd="10dp"
      android:background="@drawable/circular_profile"
      app:tint="@color/white"
      android:layout_centerVertical="true"
      android:id="@+id/user_proile"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textSize="26sp"
      android:text="user name"
    android:textColor="@color/white"
    android:layout_toRightOf="@id/user_proile"
      android:id="@+id/user_name_text"
      android:layout_marginStart="20dp"
    />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:textSize="22sp"
      android:text="+91000000000"
      android:textColor="@color/white"
      android:layout_toRightOf="@id/user_proile"
      android:layout_below="@id/user_name_text"
      android:layout_marginStart="20dp"
      android:id="@+id/user_phone_text"
      />




</RelativeLayout>