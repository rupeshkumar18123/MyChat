<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rectangle"
        android:backgroundTint="@color/third_color"
        android:layout_marginEnd="40dp"
        android:padding="5dp"
        android:id="@+id/left_chat_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/left_chat_textview"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rectangle"
        android:backgroundTint="#10DF5C"
        android:id="@+id/right_chat_layout"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp"
            android:id="@+id/right_chat_textview"/>


    </LinearLayout>


</RelativeLayout>